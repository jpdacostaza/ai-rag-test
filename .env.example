# LLM Backend Configuration Example
# Copy this file to .env and update with your actual values

# ==========================================
# API Keys (Replace with your actual keys)
# ==========================================
OPENAI_API_KEY=your_openai_api_key_here
WEATHERAPI_KEY=your_weatherapi_key_here

# ==========================================
# Service Configuration
# ==========================================
# FastAPI Backend
BACKEND_HOST=localhost
BACKEND_PORT=8001

# Ollama LLM Service
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# chromadb Vector Database
CHROMA_HOST=localhost
CHROMA_PORT=8002
CHROMA_PERSIST_DIRECTORY=./storage/chroma

# ==========================================
# Security Settings
# ==========================================
SECRET_KEY=your_secret_key_here_change_in_production
API_KEY=your_api_key_for_authentication

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=human
LOG_FILE=./logs/backend.log

# ==========================================
# Performance Settings
# ==========================================
# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_FALLBACK=sentence-transformers/all-MiniLM-L6-v2

# Connection Pools
REDIS_MAX_CONNECTIONS=10
CHROMA_MAX_CONNECTIONS=5

# Timeouts (seconds)
REQUEST_TIMEOUT=30
TOOL_TIMEOUT=10
EMBEDDING_TIMEOUT=5

# ==========================================
# Watchdog Monitoring
# ==========================================
WATCHDOG_CHECK_INTERVAL=30
WATCHDOG_TIMEOUT=5
WATCHDOG_MAX_RETRIES=3
WATCHDOG_ALERT_THRESHOLD=3

# ==========================================
# Enhanced Features
# ==========================================
# Enable/disable enhanced learning and document processing
ENABLE_ADAPTIVE_LEARNING=true
ENABLE_ENHANCED_CHUNKING=true
ENABLE_FEEDBACK_LEARNING=true

# Learning System Configuration
LEARNING_FEEDBACK_THRESHOLD=0.7
LEARNING_PATTERN_MIN_CONFIDENCE=0.8
LEARNING_MAX_PATTERNS_PER_USER=100

# Document Processing
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200
MAX_DOCUMENT_SIZE=10485760  # 10MB

# ==========================================
# Development Settings
# ==========================================
DEBUG=false
DEVELOPMENT_MODE=false
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ==========================================
# Docker & Production Settings
# ==========================================
DOCKER_ENV=true
CONTAINER_USER=llama
CONTAINER_UID=1000
CONTAINER_GID=1000

# Data Persistence
STORAGE_PATH=./storage
BACKUP_PATH=./backups
